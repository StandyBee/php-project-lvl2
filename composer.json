            "src/Parsers.php",
            "src/Formatters/Stylish.php",
            "src/Formatters/Plain.php",
            "src/Formatters/Json.php"
        ],
        "psr-4": {
            "Differ\\": "src",
            "Differ\\Tests\\": "tests"
        }
    },
    "authors": [
        {
            "name": "Anton",
            "email": "afisak94@gmail.com"
        }
    ],
    "bin": [
        "bin/gendiff"
    ],
    "require": {
        "docopt/docopt": "^1.0",
        "squizlabs/php_codesniffer": "^3.7",
        "symfony/yaml": "^5.4",
        "lstrojny/functional-php": "^1.17"
    },
    "scripts": {
        "phpcs": "phpcs",
